<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- JAVA와 연결할 Mapper 파일 설정 -->
<mapper namespace="poly.persistance.mapper.IBoardMapper">

 <!-- 게시판 리스트 쿼리 -->
	<select id="getBoardList" resultType="NoticeDTO">
	SELECT * FROM NOTICETABLE
	</select>
<!-- 게시판 선택  -->	
	<select id="searchList" parameterType="NoticeDTO" resultType="NoticeDTO">
	SELECT * FROM NOTICETABLE WHERE NOTIC_NO=#{notice_no}
	</select>
<!-- 게시판 선택  -->	
	<select id="searchList" parameterType="NoticeDTO" resultType="NoticeDTO">
	SELECT * FROM NOTICETABLE WHERE NOTIC_NO=#{notice_no}
	</select>
<!-- 게시판 삭제 -->	
	<delete id="getDeletePost"  parameterType="NoticeDTO">
	DELETE FROM NOTICETABLE WHERE NOTIC_NO=#{notice_no}
	</delete>
 <!-- 게시판 등록 -->	
 	<insert id="insertPost" parameterType="NoticeDTO">
	
	INSERT INTO BOARD(
	NOTIC_NO,
	NOTICE,
	REG_ID,
	LIKE,
	CONTENT,
	UPD_ID
	)VALUES(
	NOTICE_SEQ.NEXTVAL,
	#{notice},
	#{reg_id},
	#{like},
	#{content},
	#{reg_id}
	)
	
	</insert>
<!-- 게시판 수정 -->
	<update id="getUpdatePost" parameterType="NoticeDTO">
	UPDATE NOTICETABLE 
	SET
	 	NOTICE=#{notice},
	 	CONTENT=#{content}	 	
	 WHERE 
	 	NOTIC_NO=#{notice_no}
	</update>
 	
</mapper>